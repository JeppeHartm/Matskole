<src:BaseUserControlComponent x:Class="Game2.Component.PlayableComponent.Plus.PlusComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:src="clr-namespace:Game2.Component"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    mc:Ignorable="d" Height="{Binding CompHeight, Mode=TwoWay}" Width="{Binding CompWidth, Mode=TwoWay}"
    Canvas.Left="{Binding Path=X, Mode=TwoWay}"
    Canvas.Top="{Binding Path=Y, Mode=TwoWay}"
    Name="PlusComponentView"
    Tag="{Binding MainTag, Mode=TwoWay}"
    Loaded="PlusComponentView_Loaded_1"
    Opacity="{Binding CompOpacity, Mode=TwoWay}">
    <!--Background="White"-->
    <Grid x:Name="LayoutRoot" MouseLeftButtonDown="LayoutRoot_MouseLeftButtonDown_1"  MouseLeftButtonUp="LayoutRoot_MouseLeftButtonUp_1" ><!--MouseMove="LayoutRoot_MouseMove_1" this is now done inside the constructor because of throttling -->
        <Image Source="{Binding ImgSourcePath}" Stretch="Fill" Width="{Binding ImgWidth}" Height="{Binding ImgHeight}" />
        <!--<sdk:Label HorizontalAlignment="Center" Height="28" Margin="52,17,52,0" VerticalAlignment="Top" Width="16" Content="+"/>
        <sdk:Label HorizontalAlignment="Center" Height="28" Margin="10,17,64,0" VerticalAlignment="Top" Width="46" Content="{Binding In1, Mode=TwoWay}" Name="LeftHand"/>
        <sdk:Label HorizontalAlignment="Center" Height="28" Margin="64,17,10,0" VerticalAlignment="Top" Width="46" Content="{Binding In2, Mode=TwoWay}" Name="RightHand"/>-->

        <sdk:Label Height="24" Margin="{Binding LeftOutMargin, Mode=TwoWay}" Padding="6" FontSize="{Binding OutFontSize, Mode=TwoWay}" Content="{Binding LeftOut, Mode=TwoWay}" Visibility="{Binding OutVisibility, Mode=TwoWay}" Foreground="{Binding OutColor, Mode=TwoWay}" FontWeight="Bold" Name="leftout" VerticalAlignment="Center" HorizontalAlignment="Center">
            <sdk:Label.Background>
                <ImageBrush ImageSource="/Game2;component/Images/OutScreen.png" />
            </sdk:Label.Background>
        </sdk:Label>
        <Image Source="/Game2;component/Images/lock.png" Height="40" Width="40" Stretch="Fill" Opacity="1" Margin="95,11,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="{Binding LockVisibility, Mode=TwoWay}" />
    </Grid>
</src:BaseUserControlComponent>
